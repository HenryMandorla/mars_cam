<link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css">

<h1>Random Mars Photo of the Day</h1>

<% if @random %>
  <p><strong>Rover:</strong> <%= @random.name %></p>
  <p><strong>Date:</strong> <%= @random.date %></p>
  <img src="<%= @random.img_src %>" alt="Random Mars photo" style="max-width: 100%;">
<% else %>
  <p>No photo found today. Mars is sleeping.</p>
<% end %>

<hr>

<h2>Search for a Mars Photo by Sol</h2>

<%= form_with url: search_path, method: :get do %>
  <div>
    <label for="sol">Enter Sol:</label>
    <%= text_field_tag :sol, params[:sol], id: 'sol' %>
  </div>
  <%= submit_tag "Search" %>
<% end %>

