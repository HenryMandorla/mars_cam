<link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css">

<h2>Try a different Sol</h2>

<%= form_with url: search_path, method: :get do %>
  <div>
    <label for="sol">Enter Sol:</label>
    <%= text_field_tag :sol, params[:sol], id: 'sol' %>
  </div>
  <%= submit_tag "Search" %>
<% end %>
<h1>Mars Photo for Sol <%= params[:sol] %></h1>

<% if @photo %>
  <p><strong>Rover:</strong> <%= @photo.name %></p>
  <p><strong>Date:</strong> <%= @photo.date %></p>
  <img src="<%= @photo.img_src %>" alt="Mars photo" style="max-width: 100%;">
<% else %>
  <p>No photo found for Sol <%= params[:sol] %>.</p>
<% end %>

<hr>

